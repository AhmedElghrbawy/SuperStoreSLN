@model ShoppingCartViewModel


@if (!Model.Products?.Any() ?? true)
{

    <div class="w-100 h-100 d-flex justify-content-center align-items-center ">
        <p>Your Shopping Cart Is Empty.</p>
    </div>

}else
{
<main class="row">
    <div class="col-md-8">
            @foreach (var product in Model.Products)
            {
                    <div class="card mb-3">
                        <div class="row ">
                            <div class="col-md-4">
                                <img src="@product.ImageUrl" class="w-100">
                            </div>
                            <div class="col-md-8 px-3">
                                <div class="card-block px-3">
                                    <h4 class="card-title">@product.Title</h4>
                                    <p class="card-text">Price: <strong>@Html.DisplayFor(p => product.Price)</strong></p>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-end w-100 mb-2">
                            <form asp-controller="Cart" asp-action="Delete">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button class="btn btn-danger text-light">Remove <i class="far fa-trash-alt"></i></button>
                            </form>
                        </div>
                    </div>

             }

            </div>
            <div class="col-md-4">
                <p>Total Price: <strong> @Html.DisplayFor(sh => sh.TotalPrice) </strong></p>
            </div>
        </main>
}
