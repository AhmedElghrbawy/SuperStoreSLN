@model ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create a new product</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <input type="hidden" value="@Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"  rows="10" cols="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ImageFile">Image</label>
                <input class="form-control-file" type="file" id="ImageFile"
                       name="ImageFile"
                       multiple="multiple" />
            </div>
            <div class="form-group">
                <label asp-for="AmountAvailable" class="control-label"></label>
                <input asp-for="AmountAvailable" class="form-control" />
                <span asp-validation-for="AmountAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategorySelectList" class="control-label">Category</label>
                <select id="CategorySelectList" name="CategoryId" asp-items="@Model.CategorySelectList">
                    <option value="0">Select A Category</option>
                </select>
                <span asp-validation-for="CategorySelectList" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
